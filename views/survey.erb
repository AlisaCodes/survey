<h1>Edit a <%= @survey.name() %>:</h1>

<form action="/surveys/<%= @survey.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit">Delete</button>
</form>


<h2>Add a Question:</h2>

<form action="/questions" method="post">

  <label for='description'>Description:</label>
  <input id='description' name='description' type='text'>
  <input id='survey_id' name='survey_id' type='hidden' value="<%= @survey.id() %>">

  <button type="submit">Add Question</button>
</form>

<h3>Your Current Surveys</h3>

<% if @survey.questions().any?() %>
  <h3>Here are all the questions in this survey:</h3>

  <ul>
    <% @survey.questions().each() do |question| %>
    <li><a href="/questions/<%= question.id()%>/edit"><%= question.description() %></a></li>
    <% end %>
  </ul>

  <% else %>

  <p>
    There are no questions yet.
  </p>

  <% end %>
